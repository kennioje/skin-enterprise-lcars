<?xml version="1.0" encoding="UTF-8"?>
<window id="123">
    <defaultcontrol always="true">5</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <control type="group">
            <posx>1020</posx>
            <animation effect="slide" tween="circle" start="1050,0" end="0,0" time="400" easing="Out">windowopen</animation>
            <animation effect="slide" tween="back" start="0,0" end="1050,0" time="400" easing="In">windowclose</animation>
            <animation effect="fade" start="100" end="0" time="300" condition="Window.IsVisible(SliderDialog) | Window.IsVisible(FileBrowser)">Conditional</animation>
            <control type="image" description="background image">
                <posx>-50</posx>
                <width>1050</width>
                <height>1000</height>
                <texture border="50">sidepanel/dialog.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="label" id="2" description="Title">
                <top>20</top>
                <posx>25</posx>
                <width>780</width>
                <textcolor>shelffont</textcolor>
                <label>$LOCALIZE[3] - SETTINGS</label>
				<visible>Window.IsVisible(123)</visible>
				<font>LCARS20</font>
                <align>center</align>
            </control>
            <control type="grouplist" id="5" description="Settings">
                <posx>15</posx>
                <top>110</top>
                <width>840</width>
                <height>880</height>
                <itemgap>12</itemgap>
                <orientation>vertical</orientation>
                <pagecontrol>60</pagecontrol>
                <onup>5</onup>
                <ondown>5</ondown>
				
            </control>
            <control type="button" id="7">
                <description>Default Button</description>
                <textoffsetx>7</textoffsetx>
				<texturenofocus colordiffuse="buttonselect2" border="20">whiterounded.png</texturenofocus>
				<texturefocus colordiffuse="buttonselect" border="20">whiterounded.png</texturefocus>
				<align>left</align>
                <aligny>center</aligny>
            </control>
            <control type="radiobutton" id="8">
                <description>Default RadioButton</description>
                <align>left</align>
                <aligny>center</aligny>
            </control>
            <control type="spincontrolex" id="9">
                <description>Default spincontrolex</description>
                <align>left</align>
				<aligny>center</aligny>
                <reverse>yes</reverse>
            </control>
            <control type="sliderex" id="10">
                <description>Default Slider</description>
                <align>left</align>
                <aligny>center</aligny>
            </control>
			
            
        </control>
    </controls>
</window>
