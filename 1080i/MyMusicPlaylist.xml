<?xml version="1.0" encoding="UTF-8"?>
<window id="500">
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    
	<include>OpenClose</include>
    <controls>
       <control type="group">
			
            <control type="image" description="BG">
                <top>100</top>
                <centerleft>960</centerleft>
                <width>1500</width>
                <height>880</height>
                <texture border="150" >sidepanel/back1.png</texture>
            </control>
		
        <control type="group">
            <control type="group" description="50">
                <visible>Control.IsVisible(50)</visible>
                <control type="group" description="Slider and List">
                   <posx>560</posx>
                    <top>150</top>
                    <control type="fixedlist" id="50">
                        <width>960</width>
                        <height>776</height>
                        <onleft >9000</onleft>
                        <onright condition="!Skin.HasSetting(Scrollbars_Passive)">60</onright>
                        <onup>50</onup>
                        <ondown>50</ondown>
                        <pagecontrol>60</pagecontrol>
                        <viewtype label="535">List</viewtype>
                        <focusposition>3</focusposition>
                        <movement>4</movement>
                        <preloaditems>4</preloaditems>
                        <scrolltime tween="sine" easing="inout">280</scrolltime>
                        <itemlayout width="890" height="111">
                            <control type="image">
                                <height>110</height>
                                <width>110</width>
                                <bordersize>5</bordersize>
                                <texture background="true">$INFO[ListItem.Icon]</texture>
                                <aspectratio>scale</aspectratio>
                            </control>
                            <control type="textbox" description="Main Label">
                                <posx>128</posx>
                                <height>110</height>
                                <width>700</width>
                                <font>LCARS20</font>
                                <textcolor>White</textcolor>
                                <autoscroll>false</autoscroll>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                            <control type="label" description="Label2">
                                <posx>100r</posx>
                                <include>BigListDetails</include>
                                <label>$INFO[ListItem.Label2]</label>
                            </control>
                            <control type="image" description="playing">
                                <visible>Player.HasAudio</visible>
                                <visible>StringCompare(ListItem.Title,MusicPlayer.Title)</visible>
                                <posx>65r</posx>
                                <height>60</height>
                                <width>36</width>
                                <aspectratio>keep</aspectratio>
                                <texture>images/NowPlayingNF.png</texture>
                            </control>
                            
                        </itemlayout>
                        <focusedlayout width="890" height="111">
                            <control type="image">
                                <animation effect="fade" end="0" time="30">UnFocus</animation>
                                <width>890</width>
                                <height>110</height>
                                <texture border="40" >thumb-focus.png</texture>
                            </control>
                            <control type="image">
                                <height>110</height>
                                <width>110</width>
                                <bordersize>5</bordersize>
                                <texture background="true">$INFO[ListItem.Icon]</texture>
                                <aspectratio>scale</aspectratio>
                            </control>
                            <control type="textbox" description="Main Label">
                                <posx>128</posx>
                                <height>110</height>
                                <width>700</width>
                                <font>LCARS20</font>
                                <autoscroll>false</autoscroll>
                                <textcolor>White</textcolor>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                            <control type="label" description="Label2">
                                <posx>100r</posx>
                                <include>BigListDetails</include>
                                <label>$INFO[ListItem.Label2]</label>
                            </control>
                            <control type="image" description="playing">
                                <visible>Player.HasAudio</visible>
                                <visible>StringCompare(ListItem.Title,MusicPlayer.Title)</visible>
                                <posx>65r</posx>
                                <height>60</height>
                                <width>36</width>
                                <aspectratio>keep</aspectratio>
                                <texture>images/nowplayingnf.png</texture>
                            </control>
                            
                        </focusedlayout>
                    </control>
                </control>
                <control type="scrollbar" id="60">
                    <posx>1530</posx>
                    <top>150</top>
                    <height>788</height>
                    <onleft>50</onleft>
                    <onright>noop</onright>
                </control>
            </control>
          
         
           <control type="grouplist" id="9000">
             <posx>230</posx>
            <onleft>50</onleft>
            <onright>50</onright>
            <onup>9000</onup>
            <ondown>9000</ondown>
            <align>center</align>
            <orientation>VERTICAL</orientation>
            <control type="radiobutton" id="20" description="Shuffle">
                        <width>300</width>
					    <label>191</label>
                    </control>
                   <control type="button" id="21" description="Save">
                    <texturenofocus colordiffuse="buttonselect2" border="20">whiterounded.png</texturenofocus>
					<align>left</align>
					<textoffsetx>7</textoffsetx>
					<texturefocus colordiffuse="buttonselect" border="20">whiterounded.png</texturefocus>
					<width>300</width>
					<label>190</label>
                    </control>
                   <control type="button" id="22" description="Clear">
                    <texturenofocus colordiffuse="buttonselect2" border="20">whiterounded.png</texturenofocus>
					<align>left</align>
					<textoffsetx>7</textoffsetx>
					<texturefocus colordiffuse="buttonselect" border="20">whiterounded.png</texturefocus>
					<width>300</width>
					<label>192</label>
                   </control>
                   <control type="button" id="23" description="Play">
                    <texturenofocus colordiffuse="buttonselect2" border="20">whiterounded.png</texturenofocus>
					<align>left</align>
					<texturefocus colordiffuse="buttonselect" border="20">whiterounded.png</texturefocus>
					<textoffsetx>7</textoffsetx>
					<width>300</width>
					<label>208</label>
                   </control>
                   <control type="button" id="26" description="Repeat">
                    <texturenofocus colordiffuse="buttonselect2" border="20">whiterounded.png</texturenofocus>
					<align>left</align>
					<texturefocus colordiffuse="buttonselect" border="20">whiterounded.png</texturefocus>
					<width>300</width>
					<textoffsetx>7</textoffsetx>
					<label>-</label>
                    </control>
                </control>
            
        </control>
         </control>
    </controls>
</window>
