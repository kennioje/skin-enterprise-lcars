<?xml version="1.0" encoding="UTF-8"?>
<window>
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="true">200</defaultcontrol>
    <backgroundcolor>background</backgroundcolor>
    <controls>
        <control type="image">
                <visible>!IsEmpty(Window(Home).Property(TVGuide.BackgroundFanart))</visible>
                <posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>970</height>
				<aspectratio scalediffuse="false">scale</aspectratio>
                <texture background="true" colordiffuse="55FFFFFF">$VAR[nextairedfanart]</texture>
                <fadetime>400</fadetime>
                <animation effect="fade" time="600">Visible</animation>
                <animation effect="fade" time="600">Hidden</animation>
		</control>
        <control type="image">
                <top>0</top>
                <posx>0</posx>
                <width>455</width>
                <height>970</height>
                <aspectratio>strech</aspectratio>
                <texture background="true" >Lcars/lineR.png</texture>
		</control> 
		<control type="image">
                <top>0</top>
                <posx>455</posx>
                <width>1464</width>
                <height>970</height>
                <aspectratio>strech</aspectratio>
                <texture  background="true" >Lcars/lineL.png</texture>
	     </control>
		<control type="grouplist">
			<top>980</top>
            <posx>70</posx>
			<align>left</align>
            <orientation>horizontal</orientation>
            <itemgap>10</itemgap>
			<control type="button" description="WebLink">
                <visible>!Skin.HasSetting(hideconnection)</visible>
                <width>250</width>
                <label>$INFO[Network.IPAddress,IP: ]</label>
            </control>
			<control type="button" description="cputemp">
			<visible>!Skin.HasSetting(hidecpu) + System.Platform.Linux.RaspberryPi</visible>
            <width>250</width>
                <label>$INFO[System.CPUTemperature,$LOCALIZE[140] ]</label>
            </control>
			<control type="button" description="Clock">
                <visible>!Skin.HasSetting(HideClock)</visible>
                <label>$INFO[System.Time]</label>
				<width>250</width>
            </control>
			<control type="button" description="Battery">
                <visible>IntegerGreaterThan(System.BatteryLevel,0)</visible>
                <label>Power Level $INFO[System.BatteryLevel]</label>
			    <texturenofocus colordiffuse="$VAR[Battery]" border="20">whiteallrounded.png</texturenofocus>
				<width>250</width>
            </control>
			
		</control>
        <control type="list" id="5000">
				<posx>30</posx>
				<posy>240</posy>
				<width>320</width>
				<height>740</height>
				<onleft>9000</onleft>
				<onright condition="Container(5000).HasFocus(1)">200</onright>
				<onright condition="Container(5000).HasFocus(2)">201</onright>
				<onright condition="Container(5000).HasFocus(3)">202</onright>
				<onright condition="Container(5000).HasFocus(4)">203</onright>
				<onright condition="Container(5000).HasFocus(5)">204</onright>
				<onright condition="Container(5000).HasFocus(6)">205</onright>
				<onright condition="Container(5000).HasFocus(7)">206</onright>
				<onup>9000</onup>
				<ondown>5000</ondown>
				<pagecontrol>-</pagecontrol>
				<scrolltime tween="quadratic">300</scrolltime>
				<itemlayout height="50" width="310">
					<control type="image">
						<posx>20</posx>
                        <width>300</width>
                        <height>40</height>
                        <texture colordiffuse="buttonselect2" >whiteallrounded2.png</texture>
					</control>
					<control type="label">
						<left>95</left>
                        <top>8</top>
                        <width>150</width>
                        <height>28</height>
                        <aligny>center</aligny>
					    <font>LCARS20</font>
                        <align>left</align>
                        <scroll>false</scroll>
				        <textcolor>black</textcolor>
                        <label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<posx>250</posx>
						<top>8</top>
                        <width>50</width>
						<height>28</height>
                        <font>LCARS20</font>
						<textcolor>black</textcolor>
						<align>right</align>
                        <label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>
				<focusedlayout height="50" width="310">
					<control type="image">
						<posx>20</posx>
                        <width>300</width>
                        <height>40</height>
                        <texture >whiteallrounded2.png</texture>
					</control>
					<control type="label">
						<left>95</left>
                        <top>8</top>
                        <width>150</width>
                        <height>28</height>
                        <aligny>center</aligny>
					    <font>LCARS20</font>
                        <align>left</align>
                        <scroll>false</scroll>
				        <textcolor>black</textcolor>
                        <label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<posx>250</posx>
						<top>8</top>
                        <width>50</width>
						<height>28</height>
                        <font>LCARS20</font>
						<textcolor>black</textcolor>
						<align>right</align>
                        <label>$INFO[ListItem.Label2]</label>
					</control>
				</focusedlayout>			
				<content>
					<item id="1">
						<label>$INFO[Window(home).Property(NextAired.200.Weekday)]</label>
						<label2>$INFO[Container(200).NumItems, (,)]</label2>
						<onclick>noop</onclick>
						<icon>-</icon>
					</item>
					<item id="2">
						<label>$INFO[Window(home).Property(NextAired.201.Weekday)]</label>
						<label2>$INFO[Container(201).NumItems, (,)]</label2>
						<onclick>noop</onclick>
						<icon>-</icon>
					</item>
					<item id="3">
						<label>$INFO[Window(home).Property(NextAired.202.Weekday)]</label>
						<label2>$INFO[Container(202).NumItems, (,)]</label2>
						<onclick>noop</onclick>
						<icon>-</icon>
					</item>
					<item id="4">
						<label>$INFO[Window(home).Property(NextAired.203.Weekday)]</label>
						<label2>$INFO[Container(203).NumItems, (,)]</label2>
						<onclick>noop</onclick>
						<icon>-</icon>
					</item>
					<item id="5">
						<label>$INFO[Window(home).Property(NextAired.204.Weekday)]</label>
						<label2>$INFO[Container(204).NumItems, (,)]</label2>
						<onclick>noop</onclick>
						<icon>-</icon>
					</item>
					<item id="6">
						<label>$INFO[Window(home).Property(NextAired.205.Weekday)]</label>
						<label2>$INFO[Container(205).NumItems, (,)]</label2>
						<onclick>noop</onclick>
						<icon>-</icon>
					</item>
					<item id="7">
						<label>$INFO[Window(home).Property(NextAired.206.Weekday)]</label>
						<label2>$INFO[Container(206).NumItems, (,)]</label2>
						<onclick>noop</onclick>
						<icon>-</icon>
					</item>
				</content>
			</control>
			<control type="group" id="9001">
				<posx>630</posx>
				<top>200</top>
				<control type="panel" id="200">
					<visible allowhiddenfocus="true">[Control.HasFocus(5000) + Container(5000).HasFocus(1)] | Control.HasFocus(200) | [Container(5000).HasFocus(1) + Control.HasFocus(60)]</visible>
					<onright>200</onright>
					<include>TVNextAiredListCommonLayout</include>				
				</control>
				<control type="panel" id="201">
					<visible allowhiddenfocus="true">[Control.HasFocus(5000) + Container(5000).HasFocus(2)] | Control.HasFocus(201) | [Container(5000).HasFocus(2) + Control.HasFocus(60)]</visible>
					<onright>201</onright>
					<include>TVNextAiredListCommonLayout</include>
				</control>
				<control type="panel" id="202">
					<visible allowhiddenfocus="true">[Control.HasFocus(5000) + Container(5000).HasFocus(3)] | Control.HasFocus(202) | [Container(5000).HasFocus(3) + Control.HasFocus(60)]</visible>
					<onright>202</onright>
					<include>TVNextAiredListCommonLayout</include>
				</control>
