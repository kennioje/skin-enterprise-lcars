                <description>Next Song Name</description>
                <posx>5</posx>
                <top>5</top>
                <width>470</width>
                <height>25</height>
                <font>LCARS20</font>
                <textcolor>blue</textcolor>
                <label>[COLOR=blue]$LOCALIZE[209] :[/COLOR] [COLOR=selected]$INFO[MusicPlayer.offset(1).Title][/COLOR]</label>
