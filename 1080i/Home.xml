<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <backgroundcolor>background</backgroundcolor>
    <onload>RunScript(script.favourites)</onload>
    <include>OpenClose</include>
     <controls>
        <include>Backgroundcolor</include>
		<control type="image">
                <top>0</top>
                <posx>0</posx>
                <width>455</width>
                <height>970</height>
                <aspectratio>strech</aspectratio>
                <texture background="true" >Lcars/lineR.png</texture>
		</control> 
		<control type="image">
                <top>0</top>
                <posx>455</posx>
                <width>1464</width>
                <height>970</height>
                <aspectratio>strech</aspectratio>
                <texture  background="true" >Lcars/lineL.png</texture>
	     </control>
		<control type="grouplist">
			<top>980</top>
            <posx>70</posx>
			<align>left</align>
            <orientation>horizontal</orientation>
            <itemgap>10</itemgap>
			<control type="button" description="WebLink">
                <visible>!Skin.HasSetting(hideconnection)</visible>
                <width>250</width>
                <label>$INFO[Network.IPAddress,IP: ]</label>
            </control>
			<control type="button" description="cputemp">
			<visible>!Skin.HasSetting(hidecpu) + System.Platform.Linux.RaspberryPi</visible>
            <width>250</width>
                <label>$INFO[System.CPUTemperature,$LOCALIZE[140] ]</label>
            </control>
			<control type="button" description="Clock">
                <visible>!Skin.HasSetting(HideClock)</visible>
                <label>$INFO[System.Time]</label>
				<width>250</width>
            </control>
			<control type="button" description="Battery">
                <visible>IntegerGreaterThan(System.BatteryLevel,0)</visible>
                <label>Power Level $INFO[System.BatteryLevel]</label>
			    <texturenofocus colordiffuse="$VAR[Battery]" border="20">whiteallrounded.png</texturenofocus>
				<width>250</width>
            </control>
			<control type="button" description="movie">
                <visible>!Skin.HasSetting(Hidedb) + Container(9000).HasFocus(340)</visible>
                <label>$INFO[Window.Property(Movies.Count),$LOCALIZE[342]: ]</label>
				<width>250</width>
            </control>
			<control type="button" description="tv">
                <visible>!Skin.HasSetting(Hidedb) + Container(9000).HasFocus(341)</visible>
                <label>$INFO[Window.Property(TVShows.Count),$LOCALIZE[20343]: ]</label>
				<width>250</width>
            </control>
			<control type="button" description="songs">
                <visible>!Skin.HasSetting(Hidedb) + Container(9000).HasFocus(342)</visible>
                <label>$INFO[Window.Property(Music.SongsCount),$LOCALIZE[134]: ]</label>
				<width>250</width>
            </control>
		</control>
        <control type="group">
        <!--ICON SETTINGS-->			
        
		<control type="panel" id="9000" description="ICONE">
                <scrolltime>300</scrolltime>
				<width>320</width>
                <height>750</height>
                <top>120</top>
                <posx>50</posx>
		        <onleft>60</onleft>
                <pagecontrol>60</pagecontrol>
                <onright condition="Container(9000).HasFocus(352)">ActivateWindow(134)</onright>
                <onright condition="Container(9000).HasFocus(345)">ActivateWindow(1120)</onright>
                <onright condition="!Container(9000).HasFocus(345)">700</onright>
                <focusposition>1</focusposition>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <orientation>vertical</orientation>
                <!--scrolltime tween="sine" easing="inout">280</scrolltime-->
               <itemlayout height="50" width="310">
                    <control type="image" description="THMBSBASECOLOR">
                        <visible>Skin.HasSetting(colormenu)</visible>
                        <posx>20</posx>
                        <width>300</width>
                        <height>40</height>
                        
						<texture colordiffuse="buttonselect2" >whiteallrounded2.png</texture>
                    </control>
			  <control type="image" description="Color Base">
                        <visible>!Skin.HasSetting(colormenu)</visible>
                        <posx>20</posx>
                        <width>300</width>
                        <height>40</height>
                        <aspectratio scalediffuse="false" aligny="center">scale</aspectratio>
						<texture diffuse="whiteallrounded2.png">$INFO[ListItem.Property(color),,.png]</texture>
			  </control>
			  <control type="label" description="LABEL">
                        <left>95</left>
                        <top>8</top>
                        <width>230</width>
                        <height>28</height>
                        <aligny>center</aligny>
					    <font>LCARS20</font>
                        <align>left</align>
                        <scroll>false</scroll>
				        <textcolor>black</textcolor>
                        <label>$INFO[ListItem.label]</label>
                    </control>
                </itemlayout>								
			
                <focusedlayout height="50" width="310">
                    <control type="image" description="THMBSBASE">
                        <posx>20</posx>
                        <width>300</width>
                        <height>40</height>
                        
						<texture >whiteallrounded2.png</texture>
                    </control>
			  <control type="label" description="label">
                        <left>95</left>
                        <top>8</top>
                        <width>230</width>
                        <height>28</height>
                        <aligny>center</aligny>
					    <font>LCARS20</font>
                        <align>left</align>
                        <textcolor>black</textcolor>
                        <label>$INFO[ListItem.label]</label>
                    </control>
                </focusedlayout>			
		    <content>
                    <include>homepanel</include>
            </content>
					
            </control>
			
            <control type="group" description="Furniture">
                 <control type="rss" description="RSS Feed">
                    <visible>system.getbool(lookandfeel.enablerssfeeds)</visible>
                    <include>OpenClose</include>
                    <posx>130</posx>
			  <posy>1025</posy>
			  <width>1660</width>
			  <height>33</height>
                    <font>LCARS20</font>
			  <urlset>1</urlset>
                    <shadowcolor>-</shadowcolor>
                    <titlecolor>rsscolor</titlecolor>
                    <headlinecolor>rsscolor</headlinecolor>
                    <textcolor>rsscolor</textcolor>
                </control>				
            </control>
            			
                				
            <control type="group" id="700" description="Shelf items">
                <posx>630</posx>
				<top>200</top>
				<control type="image" description="Logo">
                <top>50</top>
				<posx>60</posx>
				<width>1180</width>
        		<height>450</height>
        		<aspectratio scalediffuse="false">scale</aspectratio>
                <texture  diffuse="EmptyCaseMask2.png" background="true" colordiffuse="69FFFFFF" >sidepanel/LCARS.png</texture>
                <bordertexture  border="40">shadow.png</bordertexture>
        		<bordersize>10</bordersize>
                </control>
				<include>weather_shelf</include>
                <include condition="Library.HasContent(TVShows)">TV_RA</include>
                <include condition="Skin.HasSetting(PicturesShelf_Custom)">Pictures_Shortcuts</include>
                <include condition="Skin.HasSetting(AddonsShelf_Custom)">Addons_Shortcuts</include>
                <include condition="System.HasAddon(script.tv.show.next.aired)">TV_NA</include>
                <include condition="Library.HasContent(Movies)">Movies</include>
                <include>Music_RA</include>
                <include>epg</include>
                <include>Favsshelf</include>
                <include>energize</include>
                <include>mediasource</include>
                <control type="label" description="Top Label">
                    <include>ShelfTitle</include>
                    <label> $VAR[shelflabel] </label>
                </control>
			
            </control>
        </control>
       <control type="scrollbar" id="60">
            <posx>20</posx>
            <height>770</height>
            <top>110</top>
            <onleft>9000</onleft>
            <onright>9000</onright>
        </control>
		<control type="scrollbar" id="66">
            <visible>Container(9000).HasFocus(608) | Container(9000).HasFocus(607) | Container(9000).HasFocus(606) | Container(9000).HasFocus(605) | Container(9000).HasFocus(604) | Container(9000).HasFocus(603) | Container(9000).HasFocus(602) | Container(9000).HasFocus(601) | Container(9000).HasFocus(340) | Container(9000).HasFocus(341) | Container(9000).HasFocus(358) | Container(9000).HasFocus(343) | Container(9000).HasFocus(344) | Container(9000).HasFocus(342)</visible>
            <posx>730</posx>
            <onup>9000</onup>
            <ondown>9000</ondown>
            <width>1110</width>
			<orientation>horizontal</orientation>
			<height>8</height>
            <top>720</top>
            <onleft>9000</onleft>
            <onright>9000</onright>
        </control>
		<control type="grouplist">
            	<posx>380</posx>
            	<top>675</top>
                  <include>playTop</include>
		</control>
    </controls>
</window>
